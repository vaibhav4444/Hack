<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="LoginCardView" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">1dp</item>
    </style>

    <style name="LoginButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:height">40dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/large_txt_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>

    </style>
    <style name="RegisterButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:height">40dp</item>
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textSize">@dimen/large_txt_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="colorButtonNormal">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>

    </style>


</resources>
